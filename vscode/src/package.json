{
  "name": "appetit",
  "displayName": "Appetit",
  "description": "Basic Appetit support for VS Code",
  "publisher": "vansmith",
  "author": {
    "name": "Bryan Smith"
  },
  "version": "1.0.0",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "contributes": {
    "languages": [{
      "id": "appetit",
      "aliases": ["Appetit", "appetit"],
      "extensions": [".apt"],
      "icon": {
        "light": "icon.png",
        "dark": "icon.png"
      },
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "appetit",
      "scopeName": "source.appetit",
      "path": "./syntaxes/appetit.tmLanguage.json"
    }],
    "snippets": [
      {
        "language": "appetit",
        "path": "./snippets/appetit.code-snippets"
      }
    ]
  }
}
